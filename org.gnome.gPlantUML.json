{
    "app-id": "org.gnome.gPlantUML",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "gplantuml",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "graphviz",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-static",
                "--disable-man-pdfs",
                "--disable-tcl",
                "--disable-perl",
                "--disable-python",
                "--disable-ruby",
                "--disable-php",
                "--disable-lua",
                "--disable-ocaml",
                "--disable-r",
                "--disable-sharp",
                "--disable-go",
                "--disable-guile",
                "--disable-java",
                "--without-qt",
                "--without-gtk",
                "--without-gdk",
                "--without-gdk-pixbuf",
                "--without-x"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/graphviz/graphviz/-/archive/10.0.1/graphviz-10.0.1.tar.gz",
                    "sha256": "REPLACE_WITH_ACTUAL_SHA256"
                }
            ]
        },
        {
            "name": "gplantuml",
            "buildsystem": "meson",
            "config-opts": [
                "--prefix=/app"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}

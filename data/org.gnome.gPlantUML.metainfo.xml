<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.gnome.gPlantUML</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>gPlantUML</name>
  <summary>Native PlantUML diagram viewer and editor</summary>

  <description>
    <p>
      gPlantUML is a native GTK4/libadwaita application for viewing and editing
      PlantUML diagrams. It provides real-time preview of your diagrams as you type,
      with full syntax highlighting and error detection.
    </p>
    <p>Features:</p>
    <ul>
      <li>Native rendering using Graphviz (no Java required)</li>
      <li>Real-time diagram preview with debounced updates</li>
      <li>Syntax highlighting for PlantUML</li>
      <li>Support for multiple diagram types: Sequence, Class, Activity, State, Use Case, Component</li>
      <li>Export to SVG, PNG, and PDF</li>
      <li>Dark mode support</li>
      <li>Multi-tab editing</li>
    </ul>
  </description>

  <launchable type="desktop-id">org.gnome.gPlantUML.desktop</launchable>

  <screenshots>
